<body class="background_matches">
  <div class="container card_matches">
    <div class="person1">
      <div class="name">
        <%= @female.first_name %>
        <%= @female.last_name%>
      </div>
      <p id="geo"><%= @female.geo%></p>

      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
            <%= cl_image_tag @female.photo.key, height: 400, width: 337, crop: :fill%>
          </div>
          <div class="flip-card-back">
            <p><strong>Age:</strong> <%= @female.age%></p>
            <p><strong>Description:</strong><br><%= @female.description %></p>
            <p><strong>Interest:</strong><br><%= @female.interest%></p>
          </div>
        </div>
      </div>

    </div>

    <div class="buttons_match">
      <div class="Match">
        <div class="input">
          <%= simple_form_for [@match] do |f| %>
            <div>
              <%= f.input :male, selected: 1, collection: [@male.id], label: false, input_html: { autocomplete: "" ,  class: "d-none"}%>
            </div>
            <div><%= f.input :female, selected: 1, collection: [@female.id], label: false, input_html: { autocomplete: "" ,  class: "d-none"} %></div>
            <div class="confirm">
              <%= f.submit "Match", class:"btn btn-primary"%>
            </div>
          <% end %>
        </div>
      </div>

      <%= link_to "Shuffle", new_match_path, class: "btn btn-primary" %>
    </div>

    <div class="person1">
      <div class="name">
        <%= @male.first_name %>
        <%= @male.last_name%>
      </div>
      <p id=""><%= @male.geo%></p>

      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
            <%= cl_image_tag @male.photo.key, height: 400, width: 337, crop: :fill%>
          </div>

          <div class="flip-card-back">
            <p><strong>Age:</strong> <%= @male.age%></p>
            <p><strong>Description:</strong><br><%= @male.description %></p>
            <p><strong>Interest:</strong><br><%= @male.interest%></p>
          </div>
        </div>
      </div>
    </div>


  </div>
</body>
