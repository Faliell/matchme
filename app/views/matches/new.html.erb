<body class="container background_matches">
  <div class="container card_matches"
    data-controller="matches"
    data-matches-female-first-name-value="<%= @female.first_name %>"
    data-matches-female-last-name-value="<%= @female.last_name %>"
    data-matches-female-id-value="<%= @female.id %>"
    data-matches-female-photo-value="<%= @female.photo.key%>"
    data-matches-female-age-value="<%= @female.age%>"
    data-matches-female-description-value="<%= @female.description %>"
    data-matches-female-interest-value="<%= @female.interest %>"
    data-matches-female-geo-value="<%= @female.geo %>"

    data-matches-male-first-name-value="<%= @male.first_name %>"
    data-matches-male-last-name-value="<%= @male.last_name %>"
    data-matches-male-id-value="<%= @male.id %>"
    data-matches-male-photo-value="<%= @male.photo.key%>"
    data-matches-male-age-value="<%= @male.age%>"
    data-matches-male-description-value="<%= @male.description %>"
    data-matches-male-interest-value="<%= @male.interest %>"
    data-matches-male-geo-value="<%= @male.geo %>"
    >
    <div class="person1">
      <div class="name">
        <span data-matches-target="femaleFirstName"><%= @female.first_name %></span>
        <span data-matches-target="femaleLastName"><%= @female.last_name%></span>
        <span ></span>

      </div>
      <div class="d-flex align-items-center justify-content-start">
        <i class="fa-solid fa-location-dot me-1"></i>
        <p id="geo" data-matches-target="femaleGeo" class="m-0"><%= @female.geo%></p>
      </div>


      <div class="flip-card d-flex flex-column justify-content-center">
        <div class="flip-card-inner">
          <div class="flip-card-front" data-matches-target="femalePhoto">
            <%= cl_image_tag @female.photo.key, height: 400, width: 337, crop: :fill, gravity: :face%>
          </div>
          <div class="flip-card-back">
            <div class="mb-2">
              <p>Age: </p>
              <p data-matches-target="femaleAge"><%= @female.age%></p>
            </div>
            <div class="mb-2">
              <p>Description: </p>
              <p data-matches-target="femaleDescription"><%= @female.description %></p>
            </div>
            <div class="mb-2">
              <p>Interests: </p>
              <p data-matches-target="femaleInterest"><%= @female.interest%></p>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <a data-action="click->matches#changeFemale"><img id="LogoShuffel" src="https://res.cloudinary.com/dlr6yrpai/image/upload/v1662109367/MatchMe/Shuffle_white_arrow_yximqr.png" /></a>
      </div>
    </div>

    <div class="button_match">
        <div class="input">
          <%= simple_form_for [@match] do |f| %>
            <div>
              <%= f.hidden_field :male, value: @male.id, data: {matches_target: "maleid"} %>
            </div>
            <div>
              <%= f.hidden_field :female, value: @female.id, data: {matches_target: "femaleid"} %>
            </div>
            <div class="confirm">
              <%= f.submit "Match Us!", class:"Match matches-size"%>
            </div>
          <% end %>
        </div>
    </div>

    <div class="person1">
      <div class="name">
        <span data-matches-target="maleFirstName"><%= @male.first_name %></span>
        <span data-matches-target="maleLastName"><%= @male.last_name%></span>
        <span ></span>
      </div>
      <div class="d-flex align-items-center justify-content-start">
        <i class="fa-solid fa-location-dot me-1"></i>
        <p id="geo" data-matches-target="maleGeo" class="m-0"><%= @male.geo%></p>
      </div>
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front" data-matches-target="malePhoto">
            <%= cl_image_tag @male.photo.key, height: 400, width: 337, crop: :fill, gravity: :face %>
          </div>
          <div class="flip-card-back">
            <div class="mb-2">
              <p>Age: </p>
              <p data-matches-target="maleAge"><%= @male.age%></p>
            </div>
            <div class="mb-2">
              <p>Description: </p>
              <p data-matches-target="maleDescription"><%= @male.description %></p>
            </div>
            <div class="mb-2">
              <p>Interests: </p>
              <p data-matches-target="maleInterest"><%= @male.interest%></p>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <a data-action="click->matches#changeMale"><img id="LogoShuffel" src="https://res.cloudinary.com/dlr6yrpai/image/upload/v1662109367/MatchMe/Shuffle_white_arrow_yximqr.png" /></a>
      </div>

    </div>



</body>
