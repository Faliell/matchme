<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs mt-5">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "" }%>
    <%= f.input :age,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "" }%>
    <%= f.input :gender, selected: 1 , collection: ["Male", "Female"],
                required: true,
                autofocus: true,
                input_html: { autocomplete: "" }%>
    <%= f.input :description,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "" }%>
    <%= f.input :interest,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "" }%>

    <%= f.input :geo,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "" }%>
    <%= f.input :type, selected: params["query"] , collection: ["MatchMaker", "MatchSeeker"],
                required: true,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "" ,  class: "d-none"}%>


    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
