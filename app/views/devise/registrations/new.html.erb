<div class="question mt-5">
  <h1 class="titleseeker">Find your match!</h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs mt-5">
      <div class="firstrow">
        <div class="firstname">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "" }%>
        </div>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "" }%>
        </div>
      <div class="secondrow">
      <%= f.input :age,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "" }%>
      <%= f.input :gender, as: :radio_buttons, selected: 1 , collection: ["Male", "Female"],
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "" }%>
      </div>
      <div class="mb-3">
      <%= f.input :description,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "" }%>
      </div>
      <div class="fourthrowinterest">
      <%= f.input :interest,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "" }%>
      </div>

      <%= f.input :geo,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "" }%>
      <%= f.input :type, selected: params["query"] , collection: ["MatchMaker", "MatchSeeker"],
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "" ,  class: "d-none"}%>


      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :photo, as: :file %>
    </div>
    <div class="signup btn">
      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    </div>
  <% end %>
</div>

<%= render 'vectors/vector_signupSeek' %>
