<div id="message-<%= message.id %>">

  <% if message.sender?(current_user) %>
  <div class="d-flex">
  <%= image_tag current_user.photo, class: "avatar_2"%>
    <strong class="align-self-center extrabold ps-2"><%= message.user.first_name %></strong>
    <i class="timestamp align-self-center d-inline ps-5"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </div>
  <% else %>
  <%= image_tag message.user.photo, class: "avatar_2"%>
    <strong class="align-self-center extrabold ps-2"><%= message.user.first_name %></strong>
    <i class="timestamp align-self-center d-inline ps-5"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  <% end %>
  <p class="pt-3"><%= message.content %></p>

</div>
